</category>

<category>
  <pattern>ДАВАЙ</pattern>
  <template>Приступим к поиску!</template>
</category>

<category>
  <pattern>*</pattern>     
  <template>
    <condition name = "howAreYou" value = "true"><srai>КАК ДЕЛА</srai>
    </condition><think><set name = "howAreYou">false</set></think>
  </template>
</category>

<category>
  <pattern>*</pattern>     
  <template>
    <condition name = "whatAreYouDoing" value = "true"><srai>ЧТО ДЕЛАЕШЬ</srai>
    </condition><think><set name = "whatAreYouDoing">unknown</set></think>
  </template>
</category>

<category>
